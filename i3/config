# deps: i3 i3status i3lock xss-lock dex network-manager-gnome brightnessctl libnotify-bin alacritty dmenu firefox-esr pulseaudio-utils psmisc dunst

# mod
set $mod Mod4

# font
font pango:monospace 10

# autostart
exec --no-startup-id dex --autostart --environment i3

# lock
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork
bindsym $mod+Shift+L exec --no-startup-id i3lock --nofork

# network
exec --no-startup-id nm-applet
